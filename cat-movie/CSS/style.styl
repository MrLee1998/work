*
    margin 0
    padding 0
#toast 
    display none
ul li  
    list-style none
.movie
    width 100%
    &-head 
        width 100%
        height 40px
        line-height 40px
        background-color #1e2025
        color #fff
        padding  0 10px
        box-sizing border-box
        display flex
        .iconfont
            width 16px
        .title
            flex 1
            text-align center
    &-info 
        padding 10px 
        background-color #1e2025
        &__desc 
            width 100%
            display flex
            .info-pic
                width 122px
                height 165px
                overflow hidden
                img 
                    width 100%
            .info-container 
                flex 1
                color #9b9da2
                margin-left 10px
                font-size 12px
                .name 
                    color #ffffff
                    font-size 24px
                    font-family  Arial,sans-serif
                    font-weight normal
                .type   
                    span 
                        width 40px
                        height 14px
                        display inline-block
                        background url('https://s0.meituan.net/bs/myfe/canary/file/asgard/images/movie/movie-tag-2DIMAX.png')
                        background-size cover
                        vertical-align  middle
                .btn-wrap   
                    display flex
                    margin-top 10px
                    .flex 
                        flex 1
                        background-color #58585b
                        height 32px
                        line-height 32px
                        color #ffffff
                        text-align center
                        border-radius 4px
                        &:nth-child(2)
                            margin-left 10px
                        .iconfont 
                            font-size 14px
        &__rate 
            background-color #161619
            padding 10px
            border-radius 4px
            margin-top 15px
            .rate-title 
                display flex
                justify-content space-between
                &__mark
                    color: #ffffff
                &__number
                    color: #68686b
                    font-size 10px
            .rate-detail
                display flex
                &__left
                    flex 454
                    display flex
                    .grade
                        margin-left 1px
                        text-align center
                        h2  
                            color #fcc300 
                        p 
                            color #68686b
                            font-size 10px
                    .star
                        margin-right 23px
                        display flex
                        align-items center
                        .list
                            display flex
                            align-items center
                            .star-num
                                font-size 0
                                width 40px
                                text-align right
                                img 
                                    width 8px
                                    height 8px
                            .persent 
                                width 78px
                                height 4px
                                background #252528
                                position relative
                                .persent-val 
                                    display block
                                    position absolute
                                    left 0
                                    top 0
                                    height 100%
                                    background #fcc300
                                    width 80%
                &__right
                    flex 266
                    display flex
                    align-items center
                    img    
                        width 120px


    &-describe 
        padding 15px      
        .line-clamp
            display -webkit-box
            -webkit-box-orient vertical
            -webkit-line-clamp 3
            word-wrap break-word
            word-break  break-all
            overflow hidden
        .arrow 
            text-align center
            .iconfont 
                display block
                transform rotateZ(0deg)
                transition all 1s ease
        .arrow .up
            display block
            transform rotateZ(180deg)

    &-pic 
        margin 10px
        width 100%
        text-align center
        border 1px solid #ffffff
    &-actor 
        width 100%
        display -webkit-flex
        flex-direction  row
